import numpy as np
from scipy.ndimage import gaussian_filter
from PIL import Image

def apply_gaussian_blur(image_path, output_path, sigma=1):
    image = Image.open(image_path)
    image_array = np.array(image)
    blurred_image_array = gaussian_filter(image_array, sigma=sigma)
    blurred_image = Image.fromarray(blurred_image_array.astype(np.uint8))
    blurred_image.save(output_path)

if __name__ == "__main__":
    input_image_path = "input_image.jpg"
    output_image_path = "blurred_image.jpg"
    apply_gaussian_blur(input_image_path, output_image_path, sigma=2)
